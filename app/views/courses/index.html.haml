.page-header
  %h1= "Courses for #{@semester}"
  - if user_signed_in?
    = link_to "Request Courses", new_course_request_path if current_user.is_student?
    %br
    = link_to "Request to teach courses", new_faculty_course_request_path if current_user.is_faculty?

.row
  .span4
    = form_tag courses_path, :method => :get do
      = select_tag "year", options_for_select([ "2012", "2013", "2014", "2015"]), :id => 'year'
      %br/
      = select_tag "semester", options_for_select({ "Fall" => :fall, "Spring" => :spring }), :id => 'semester'
      %br/
      = submit_tag "View", :class => "btn btn-info"

  .span8
    - @courses.each do |c|
      %p
        = c.identifier
        = c.name
      %br
