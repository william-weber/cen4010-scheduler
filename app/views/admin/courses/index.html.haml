.page-header
  = link_to(new_admin_course_path, :class => 'btn btn-primary') do
    %i.icon-plus.icon-white
    Add Course
  %h1= "Administer Courses"

.row
  .span12
    %table#admin-courses-table.table.table-striped.tablesorter
      %thead
        %tr
          %th Identifier
          %th Name
          %th Degree Program
          %th Date Added
          %th Date Modified
          %th
      %tbody
        - @courses.each do |c|
          %tr
            %td= c.identifier
            %td= c.name
            %td= c.degree_program.name
            %td= c.created_at
            %td= c.updated_at
            %td= link_to 'Edit', edit_admin_course_path(c), :class => 'btn btn-info btn-mini'
