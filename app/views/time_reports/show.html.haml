= render :partial => 'reports/header', :locals => { :report_for => @time_report.time, :report => @time_report }
.row
  .span6
    %h2 Students
    Courses Requested:
    %dl.dl-horizontal
      - @time_report.student_requests.map(&:course).compact.uniq.each do |course|
        %dt= course.identifier
        %dd= @time_report.student_requests.count{ |r| r.course == course }

    %ul.unstyled
      - @time_report.student_requests.each do |request|
        %li= "#{request.user.n_number} rank: #{request.rank}"

  .span6
    %h2 Faculty
    Faculty Requesting:
    = @time_report.faculty.count
    %br
    %br
    %ul.unstyled
      - @time_report.faculty_requests.each do |request|
        %li= "#{request.user.n_number} rank: #{request.rank}"
