%div{ :style => 'float: right;' }
  .btn-group
    = link_to '#', :class => 'btn dropdown-toggle btn-primary', 'data-toggle' => 'dropdown' do
      New Report by...
      %span.caret

    %ul.dropdown-menu
      %li= link_to 'Course', new_course_report_path
      %li= link_to 'Day', new_day_report_path
      %li= link_to 'Time', new_time_report_path
      %li= link_to 'Students', new_student_report_path
      %li= link_to 'Faculty', '#'

%h1 Reports
.row
  .span12
    %table#reports_table.table.table-striped.tablesorter
      %thead
        %th{ :style => 'width: 30%;' } Date Run
        %th{ :style => 'width: 15%;' } Type
        %th{ :style => 'width: 15%;' } Owner
        %th{ :style => 'width: 20%;' } First Name
        %th{ :style => 'width: 20%;' } Last Name
      %tbody
        - @reports.each do |report|
          %tr
            %td
              = link_to( 'View', report, :class => 'btn btn-info btn-mini' )
              &nbsp;
              = report.created_at.strftime '%b %d, %Y %r'
            %td= report.type
            %td= report.user.n_number
            %td= report.user.last_name
            %td= report.user.first_name
